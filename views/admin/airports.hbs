{{> header}}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card fade-in">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <h1 class="mb-0">
                        <i class="fas fa-plane-departure text-primary me-2"></i>
                        Управление аэропортами
                    </h1>
                    <a href="/admin/airports/new" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Добавить аэропорт
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card fade-in" style="animation-delay: 0.2s;">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list text-primary me-2"></i>
                        Список аэропортов
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-hashtag me-2"></i>ID</th>
                                    <th><i class="fas fa-plane-departure me-2"></i>Название</th>
                                    <th><i class="fas fa-map-marker-alt me-2"></i>Код</th>
                                    <th><i class="fas fa-plane me-2"></i>Количество рейсов</th>
                                    <th><i class="fas fa-cogs me-2"></i>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each airports}}
                                <tr class="fade-in" style="animation-delay: {{@index}}0ms">
                                    <td>{{id}}</td>
                                    <td>{{name}}</td>
                                    <td>{{code}}</td>
                                    <td>{{Flights.length}}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="/admin/airports/{{id}}/edit" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteAirport{{id}}">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                <!-- Модальное окно удаления -->
                                <div class="modal fade" id="deleteAirport{{id}}" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">
                                                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                                                    Подтверждение удаления
                                                </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Вы уверены, что хотите удалить аэропорт {{name}} ({{code}})?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                    <i class="fas fa-times me-2"></i>Отмена
                                                </button>
                                                <form action="/admin/airports/{{id}}?_method=DELETE" method="POST" class="d-inline">
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="fas fa-trash me-2"></i>Удалить
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{> footer}} 