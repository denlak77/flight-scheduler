{{> header}}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card fade-in">
                <div class="card-body">
                    <h1 class="mb-0">
                        <i class="fas fa-plus text-primary me-2"></i>
                        Добавление нового билета
                    </h1>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card fade-in" style="animation-delay: 0.2s;">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-ticket-alt text-primary me-2"></i>
                        Информация о билете
                    </h5>
                </div>
                <div class="card-body">
                    {{#if error}}
                    <div class="alert alert-danger fade-in">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        {{error}}
                    </div>
                    {{/if}}

                    <form action="/admin/tickets" method="POST">
                        <div class="mb-3">
                            <label for="userId" class="form-label">
                                <i class="fas fa-user me-2"></i>Пассажир
                            </label>
                            <select class="form-select" id="userId" name="userId" required>
                                <option value="">Выберите пассажира</option>
                                {{#each users}}
                                <option value="{{id}}">{{name}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="flightId" class="form-label">
                                <i class="fas fa-plane me-2"></i>Рейс
                            </label>
                            <select class="form-select" id="flightId" name="flightId" required>
                                <option value="">Выберите рейс</option>
                                {{#each flights}}
                                <option value="{{id}}">{{number}} ({{departureAirport.code}} - {{arrivalAirport.code}})</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="date" class="form-label">
                                <i class="fas fa-calendar me-2"></i>Дата
                            </label>
                            <input type="date" class="form-control" id="date" name="date" required>
                        </div>

                        <div class="mb-3">
                            <label for="seat" class="form-label">
                                <i class="fas fa-chair me-2"></i>Место
                            </label>
                            <input type="text" class="form-control" id="seat" name="seat" required>
                        </div>

                        <div class="mb-3">
                            <label for="price" class="form-label">
                                <i class="fas fa-ruble-sign me-2"></i>Цена
                            </label>
                            <input type="number" class="form-control" id="price" name="price" required>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Создать билет
                            </button>
                            <a href="/admin/tickets" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Вернуться к списку
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{> footer}} 