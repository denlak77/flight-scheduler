<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card fade-in">
                <div class="card-header text-center py-3">
                    <i class="fas fa-plane text-primary fa-2x mb-2"></i>
                    <h2 class="mb-0">Детали рейса {{flight.flightNumber}}</h2>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-building text-primary fa-lg me-3"></i>
                                <div>
                                    <h5 class="mb-1">Авиакомпания</h5>
                                    <p class="mb-0">{{flight.Airline.name}}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-plane-departure text-primary fa-lg me-3"></i>
                                <div>
                                    <h5 class="mb-1">Откуда</h5>
                                    <p class="mb-0">{{flight.departureAirport.name}} ({{flight.departureAirport.code}})</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-plane-arrival text-primary fa-lg me-3"></i>
                                <div>
                                    <h5 class="mb-1">Куда</h5>
                                    <p class="mb-0">{{flight.arrivalAirport.name}} ({{flight.arrivalAirport.code}})</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-clock text-primary fa-lg me-3"></i>
                                <div>
                                    <h5 class="mb-1">Время вылета</h5>
                                    <p class="mb-0">{{formatDate flight.departureTime}}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-clock text-primary fa-lg me-3"></i>
                                <div>
                                    <h5 class="mb-1">Время прилета</h5>
                                    <p class="mb-0">{{formatDate flight.arrivalTime}}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <a href="/flights" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Назад к расписанию
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 