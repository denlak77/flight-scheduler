<div class="container">
    
    <div class="row">
        <div class="col-12">
            <div class="card fade-in" style="animation-delay: 0.2s;">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list text-primary me-2"></i>
                        Список билетов
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-hashtag me-2"></i>ID билета</th>
                                    <th><i class="fas fa-user me-2"></i>Пассажир</th>
                                    <th><i class="fas fa-plane me-2"></i>Номер рейса</th>
                                    <th><i class="fas fa-plane-departure me-2"></i>Откуда</th>
                                    <th><i class="fas fa-plane-arrival me-2"></i>Куда</th>
                                    <th><i class="fas fa-calendar me-2"></i>Дата вылета</th>
                                    <th><i class="fas fa-ruble-sign me-2"></i>Цена</th>
                                    <th><i class="fas fa-cogs me-2"></i>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each tickets}}
                                <tr class="fade-in" style="animation-delay: {{@index}}0ms">
                                    <td>{{id}}</td>
                                    <td>{{User.name}}</td>
                                    <td>{{Flight.flightNumber}}</td>
                                    <td>{{Flight.departureAirport.name}} ({{Flight.departureAirport.code}})</td>
                                    <td>{{Flight.arrivalAirport.name}} ({{Flight.arrivalAirport.code}})</td>
                                    <td>{{formatDate Flight.departureTime}}</td>
                                    <td>{{price}} ₽</td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="/operator/tickets/{{id}}/edit" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteTicket{{id}}">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                <!-- Модальное окно удаления -->
                                <div class="modal fade" id="deleteTicket{{id}}" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">
                                                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                                                    Подтверждение удаления
                                                </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Вы уверены, что хотите удалить билет #{{id}}?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                    <i class="fas fa-times me-2"></i>Отмена
                                                </button>
                                                <form action="/operator/tickets/{{id}}?_method=DELETE" method="POST" class="d-inline">
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="fas fa-trash me-2"></i>Удалить
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 